<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NearbyPlace" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorSurface</item>
        <item name="colorError">@color/colorSecondary</item>
        <item name="colorOnError">@color/colorSurface</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:colorBackground">@color/color_material_white_background</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>

    <style name="Theme.NearbyPlace" parent="Base.Theme.NearbyPlace" />

    <style name="SearchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="drawableStartCompat">@drawable/ic_search_24</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:imeActionLabel">@string/search</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">48dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>

    </style>

    <style name="TagTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:paddingStart">@dimen/_14sdp</item>
        <item name="android:paddingEnd">@dimen/_14sdp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:textColor">@color/color_list_tag_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/shape_oval_outline_filled</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>
</resources>